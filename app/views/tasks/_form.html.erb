<%= form_with(model: task, local: true) do |f| %>
    
    
    <%= render 'layouts/error_messages', model: f.object %>
    
    <%= f.label :status, 'ステータス' %>
    
    <%= f.text_field :status %>
    
    
    
    <%= f.label :content, 'タスク' %>
    
    <%= f.text_field :content %>
    
    
    
    <%= f.submit '投稿' %>


<% end %>



<!--form_with(model: @task, local: true))のところの、@task が task になっています-->

